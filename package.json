{
  "name": "lantern",
  "version": "0.0.1",
  "description": "Lantern - a data analytics platform for the FT",
  "main": "src/server/server.js",
  "scripts": {
    "test": "npm run unit && npm run functional",
    "unit": "env $(cat .env) env NODE_ENV=test mocha --compilers js:babel/register --require test/setupDom.js --recursive test/**/*.spec.js",
    "test-watch": "env NODE_ENV=test mocha --compilers js:babel/register --recursive test/**/*.spec.js --watch --reporter min",
    "test-debug": "env NODE_ENV=test mocha --debug-brk --compilers js:babel/register --recursive test/**/*.spec.js",
    "cover": "env NODE_ENV=test babel-node node_modules/.bin/isparta cover node_modules/.bin/_mocha -- --require test/setupDom.js --reporter=dot test/**/*.spec.js ",
    "clean": "rm -rf lib",
    "watch-js": "babel src -d lib --experimental -w",
    "dev-server": "env $(cat .env) node lib/server/webpack",
    "server": "nodemon --delay 1 lib/server/server",
    "server-debug": "env $(cat .env) nodemon --debug lib/server/server",
    "postinstall": "npm run build && env $(cat .env) webpack --config webpack.config.prod.js",
    "start": "npm run watch-js & npm run dev-server & env $(cat .env) npm run server",
    "start-debug": "npm run watch-js & npm run dev-server & npm run server-debug",
    "start-test": "env NODE_ENV=test npm start",
    "build": "npm run clean && babel src -d lib --experimental",
    "functional": "node nightwatch.js -g test/nightwatch/functional --suiteRetries 3"
  },
  "pre-commit": "unit",
  "author": "Dario Villanueva",
  "license": "MIT",
  "jshintConfig": {
    "esnext": true
  },
  "engines": {
    "node": "0.12.7"
  },
  "dependencies": {
    "alt": "^0.17.1",
    "assert": "^1.3.0",
    "autoprefixer-loader": "^3.1.0",
    "aws-sdk": "^2.2.17",
    "babel": "^5.8.21",
    "babel-core": "^5.8.22",
    "babel-loader": "^5.3.2",
    "body-parser": "^1.13.3",
    "bunyan": "^1.5.1",
    "c3": "^0.4.11-rc4",
    "compression": "^1.5.2",
    "connect-redis": "^2.5.0",
    "cookie-parser": "^1.3.5",
    "css-loader": "^0.18.0",
    "d3": "^3.5.6",
    "datamaps": "^0.4.0",
    "elasticsearch": "^8.0.1",
    "express": "^4.13.3",
    "express-handlebars": "^2.0.1",
    "express-session": "^1.11.3",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "history": "^1.13.0",
    "http-aws-es": "^1.1.2",
    "intl": "^1.0.1",
    "iso": "^4.2.0",
    "istanbul": "^0.3.22",
    "jquery": "^2.1.4",
    "mocha": "^2.2.5",
    "moment": "^2.10.6",
    "moment-duration-format": "^1.3.0",
    "moment-range": "^2.0.3",
    "newrelic": "^1.23.1",
    "nightwatch": "^0.8.6",
    "node-sass": "^3.3.3",
    "nodemon": "^1.4.1",
    "object-assign": "^4.0.1",
    "passport": "^0.3.0",
    "passport-google-oauth2": "^0.1.6",
    "raven": "^0.8.1",
    "raven-js": "^1.1.20",
    "react": "^0.13.3",
    "react-bootstrap": "^0.25.0",
    "react-document-title": "^2.0.0",
    "react-google-analytics": "^0.2.0",
    "react-hot-loader": "^1.2.8",
    "react-intl": "^1.2.2",
    "react-router": "^1.0.0-rc3",
    "react-select": "^0.6.9",
    "redis": "^1.0.0",
    "sass-loader": "^2.0.1",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7",
    "style-loader": "^0.12.4",
    "superagent": "^1.3.0",
    "underscore": "^1.8.3",
    "uuid": "^2.0.1",
    "webpack": "^1.11.0",
    "webpack-dev-server": "^1.10.1"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "isparta": "^3.1.0",
    "jsdom": "^3.1.2",
    "pre-commit": "^1.1.1",
    "sinon": "^1.17.1"
  }
}
